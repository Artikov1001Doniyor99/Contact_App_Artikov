<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".AddActivity">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        app:title="Kontakt qo'shish"
        app:titleTextColor="@color/white"
        android:background="#E36E6E"
        />

    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:inputType="text"
            android:paddingLeft="20dp"
            android:background="#DFDADA"
            android:hint="Kontakt nomi"
            android:textColorHint="#CCC9C9"
            android:id="@+id/editText_1"
            android:layout_width="300dp"
            android:layout_height="50dp"/>

        <EditText
            android:inputType="phone"
            android:paddingLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:background="#DFDADA"
            android:hint="Kontakt raqam"
            android:textColorHint="#CCC9C9"
            android:id="@+id/editText_2"
            android:layout_width="300dp"
            android:layout_height="50dp"/>

        <androidx.cardview.widget.CardView
            android:foreground="?selectableItemBackgroundBorderless"
            app:cardBackgroundColor="#E36E6E"
            android:clickable="true"
            app:cardElevation="15dp"
            app:cardMaxElevation="15dp"
            app:cardCornerRadius="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/addList"
                android:text="Kontaklar ro'yxati"
                android:textAllCaps="false"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:background="@drawable/btn_style"
                android:layout_width="200dp"
                android:layout_height="58dp"/>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>